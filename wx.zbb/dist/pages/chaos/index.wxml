
<view class="container">
    <text class="title">
        超哥装逼利器
    </text>
    <view>
        
    <view class="counter {{$counter$style}}">
        <button bindtap="$counter$plus" size="mini">  +  </button>
        <button bindtap="$counter$minus" size="mini">  -  </button>
        <text class="count"> {{$counter$num}} </text>
    </view>

    </view>
    </view>
    <view>
        <text>
            日期空间
        </text>
        <view>
            {{year}}-{{month}}-{{day}}
        </view>
        <button bindtap="showPicker">显示隐藏showPicker</button>
    </view>
    <view xmlns:wx="" wx:if="{{showPicker}}" hidden="">
    
<view class="component-picker" xmlns:wx="" wx:if="{{$picker$isShow}}" style="width:100%">
    <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{$picker$value}}" bindchange="$picker$bindChange">
        <picker-view-column>
            <view wx:for="{{$picker$years}}" style="line-height: 50px">{{item}}年</view>
        </picker-view-column>
        <picker-view-column>
            <view wx:for="{{$picker$months}}" style="line-height: 50px">{{item}}月</view>
        </picker-view-column>
    </picker-view>
</view>

