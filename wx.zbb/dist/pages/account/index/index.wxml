
<view class="container">
    <view class="header">
        <view class="left">
            <view class="monthBox">
                <text class="year">{{year}}年</text>
                <view class="month">
                    <view class="monthText" bindtap="showPicker"><text class="num">{{month}}</text><text class="text">月</text></view>
                    <view class="triggleBottm"/>
                </view>
            </view>
        </view>
        <view class="right">
            <view class="box">
                <view class="title">总账单</view>
                <view>
                <text class="money">47.00</text>
                </view>
            </view>
        </view>
    </view>
    <view>
        
    <view class="counter {{$counter$style}}">
        <button bindtap="$counter$plus" size="mini">  +  </button>
        <button bindtap="$counter$minus" size="mini">  -  </button>
        <text class="count"> {{$counter$num}} </text>
    </view>

    </view>
    </view>
    <view hidden="{{showPicker}}">
        
<view hidden="{{$picker$isShow}}">
  <view>{{$picker$year}}年{{$picker$month}}月{{$picker$day}}日</view>
  <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{$picker$value}}" bindchange="$picker$bindChange">
    <picker-view-column>
      <view xmlns:wx="" wx:for="{{$picker$years}}" style="line-height: 50px">{{item}}年</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{$picker$months}}" style="line-height: 50px">{{item}}月</view>
    </picker-view-column>
  </picker-view>
</view>

    </view>