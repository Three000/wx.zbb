
<view class="container">
    <view class="header">
        <view class="left">
            <view class="year">
                {{year}}年
            </view>
            <view class="month">
                <text class="num">
                    01
                </text>月
                <view class="triggleBottm"/>
            </view>
        </view>
        <view class="right">
            <view class="box">
                <view class="title">
                    总账单
                </view>
                <text class="money">
                    47.00
                </text>
            </view>
        </view>
    </view>
    <view>
        
    <view class="counter {{$counter$style}}">
        <button bindtap="$counter$plus" size="mini">  +  </button>
        <button bindtap="$counter$minus" size="mini">  -  </button>
        <text class="count"> {{$counter$num}} </text>
    </view>

    </view>
    </view>
    <view>
        <text>
            日期空间
        </text>
        <view>
            {{year}}-{{month}}-{{day}}
        </view>
        <button bindtap="showPicker">显示隐藏showPicker</button>
    </view>
    <view xmlns:wx="" wx:if="{{showPicker}}">
    
<view hidden="{{}}">
  <view>{{$picker$year}}年{{$picker$month}}月{{$picker$day}}日</view>
  <view>
      <button class="cancel">取消</button>
      <button bindtap="$picker$confirm">确定</button>
  </view>
  <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{$picker$value}}" bindchange="$picker$bindChange">
    <picker-view-column>
      <view xmlns:wx="" wx:for="{{$picker$years}}" style="line-height: 50px">{{item}}年</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{$picker$months}}" style="line-height: 50px">{{item}}月</view>
    </picker-view-column>
  </picker-view>
</view>

    </view>